# Stripe Configuration
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here

# Email Configuration - SendGrid (Recommended for ease of use)
SENDGRID_API_KEY=SG.your_sendgrid_api_key_here
EMAIL_FROM=your_verified_email@yourdomain.com
EMAIL_FROM_NAME=Your Music Store

# SendGrid Dynamic Template (Optional - for professional email templates)
SENDGRID_PURCHASE_TEMPLATE_ID=d-your_sendgrid_template_id_here

# Mailgun Configuration (Alternative to SendGrid)
MAILGUN_API_KEY=your_mailgun_api_key_here
MAILGUN_DOMAIN=your_mailgun_domain_here
MAILGUN_PURCHASE_TEMPLATE_NAME=purchase-confirmation-template

# Website URL (for download links in emails)
WEBSITE_URL=https://yourdomain.com

# Alternative Email Services (uncomment to use)
# Amazon SES (Most cost-effective for large volumes)
# AWS_SES_REGION=us-east-1
# AWS_SES_ACCESS_KEY=your_aws_access_key
# AWS_SES_SECRET_KEY=your_aws_secret_key

# Gmail
# EMAIL_HOST=smtp.gmail.com
# EMAIL_PORT=587
# EMAIL_USER=your_email@gmail.com
# EMAIL_PASS=your_app_password_here

# Notion Integration
NOTION_API_KEY=your_notion_api_key_here
NOTION_DATABASE_ID=your_notion_database_id_here
NOTION_ORDERS_DATABASE_ID=your_notion_orders_database_id_here

# Server Configuration
PORT=3000
NODE_ENV=development

# File Storage
PDF_STORAGE_PATH=./storage/pdfs
TEMP_STORAGE_PATH=./storage/temp

# Database (if using local storage)
DATABASE_PATH=./data/purchases.json

# Security
JWT_SECRET=your_jwt_secret_here
SESSION_SECRET=your_session_secret_here 